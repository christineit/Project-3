    "mongoose": "^5.3.16",
    "react-dom": "^16.8.6",
    "react-popper": "^1.3.3",
    "react-transition-group": "^4.0.0",
    "reactstrap": "^8.0.0",
    "shopify-buy": "^2.2.2"
